<Window x:Class="Project1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project1"
        mc:Ignorable="d"
        Title="Car race" Height="450" Width="1225">
    <Grid x:Name="grid" ShowGridLines="true">
        <Grid.RowDefinitions>
            <RowDefinition>
            </RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Content="Start" Grid.Row="3" Width="200" Margin="100 20 500 20" Click="ButtonStart_Click" />
        <Button Content="Reset" Grid.Row="3" Width="200" Margin="500 20 100 20" Click="ButtonReset_Click"/>
    </Grid>
</Window>
